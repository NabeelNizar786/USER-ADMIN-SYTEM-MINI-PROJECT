<%- include('../layouts/header.ejs') %>

<% if (req.query.error) { %>
  <div class="alert alert-danger">
    <%= req.query.error %>
  </div>
<% } %>


<form action="" method="POST" enctype="multipart/form-data">
  <section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card bg-dark text-white" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">
  
              <div class="mb-md-5 mt-md-4 pb-5">
  
                <h2 class="fw-bold mb-2 text-uppercase">Update Details</h2>
                <!-- <p class="text-white-50 mb-5">Please enter your Email ID!</p> -->
  
                <div class="form-outline form-white mb-4">
                  <input type="email" id="email" name="email" value="<%= user.email %>" class="form-control form-control-lg" />
                  <input type="hidden" name="id" value="<%= user._id %>">
                  <br><br>
                  <input type="text" id="name" name="name" value="<%= user.name %>" class="form-control form-control-lg" />
                  <br><br>
                  <input type="file" id="image" name="image" class="form-control form-control-lg" />
                  <br><br>
                </div>
  
                <button class="btn btn-outline-light btn-lg px-5" type="submit" value="Update Profile and Save">Update Profile and Save</button>
  
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  </form>
  

<%- include('../layouts/footer.ejs') %>